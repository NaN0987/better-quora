{
    "manifest_version": 3,
    "name": "Quora but Less Shitty",
    "description": "Makes the Quora website easier to use.",
    "version": "0.1.0",
    "icons": { 
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },

    "action": {
      "default_popup": "popup.html"
    },

    "host_permissions": [
      "https://*.quora.com/"
    ],

    "permissions": [
      "cookies"
    ],

    "content_scripts": [
      {
        "js": ["scripts/content.js"],
        "matches": ["https://*.quora.com/*"]
      }
    ]
}